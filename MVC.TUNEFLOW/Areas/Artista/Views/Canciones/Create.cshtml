@model Modelos.Tuneflow.Media.Song

@{
    Layout = "~/Areas/Artista/Views/Shared/_LayoutArtista.cshtml";
    ViewData["Title"] = "Subir Canción";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded-3">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Subir Canción</h2>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Título</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Duration" class="form-label">Duración</label>
                            <input asp-for="Duration" class="form-control" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Genre" class="form-label">Género</label>
                            <input asp-for="Genre" class="form-control" />
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ArtistId" class="form-label">ID Artista</label>
                            <input asp-for="ArtistId" class="form-control" />
                            <span asp-validation-for="ArtistId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AlbumId" class="form-label">ID Álbum</label>
                            <input asp-for="AlbumId" class="form-control" />
                            <span asp-validation-for="AlbumId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FilePath" class="form-label">Archivo MP3</label>
                            <input asp-for="FilePath" class="form-control" />
                            <span asp-validation-for="FilePath" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="ExplicitContent" />
                            <label class="form-check-label" asp-for="ExplicitContent">
                                @Html.DisplayNameFor(model => model.ExplicitContent)
                            </label>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImagePath" class="form-label">Portada</label>
                            <input asp-for="ImagePath" class="form-control" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ReleaseDate" class="form-label">Fecha de Lanzamiento</label>
                            <input asp-for="ReleaseDate" class="form-control" />
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Crear Canción" class="btn btn-primary" />
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <a asp-action="Index" class="btn btn-link">Regresar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
