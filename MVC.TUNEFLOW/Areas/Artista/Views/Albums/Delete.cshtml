@model Modelos.Tuneflow.Playlists.Album

@{
    Layout = "~/Areas/Artista/Views/Shared/_LayoutArtista.cshtml";
    ViewData["Title"] = "Eliminar";
}

<div class="container">
    <h1>Eliminar Album</h1>

    <h3>¿Está seguro de eliminar el álbum?</h3>
    <div>
        <h4>Album</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Título</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
            <dt class="col-sm-2">Fecha Lanzamiento</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.ReleaseDate)</dd>
            <dt class="col-sm-2">Género</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Genre)</dd>
            <dt class="col-sm-2">Descripción</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
            <dt class="col-sm-2">Portada</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CoverPath)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Regresar</a>
        </form>
    </div>
</div>
