@model Modelos.Tuneflow.Usuario.Produccion.Artista

@{
    Layout = "~/Areas/Artista/Views/Shared/_LayoutCliente.cshtml";
    ViewData["Title"] = "Perfil del Artista";
}

<div style="background-color: #252c64; padding: 2rem; display: flex; align-items: center; justify-content: space-between;">
    <div style="display: flex; align-items: center; gap: 1.5rem;">
        <img src="@Model.ImagenPerfil" alt="Foto perfil"
             style="width: 120px; height: 120px; border-radius: 50%; border: 3px solid white;" />
        <div>
            <h4 style="color: white; margin: 0;">Perfil</h4>
            <h2 style="color: white; margin: 0; font-size: 2rem; font-weight: bold;">
                @Model.NombreArtistico
            </h2>
        </div>
    </div>

    

@if (Model.Canciones == null || !Model.Canciones.Any())
{
    <p>No hay canciones disponibles para este artista.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Título</th>
                <th>Género</th>
                <th>Duración</th>
                <th>Explícito</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cancion in Model.Canciones)
            {
                <tr>
                    <td><img src="@cancion.RutaImagen" style="max-height: 80px;" /></td>
                    <td>@cancion.Titulo</td>
                    <td>@cancion.Genero</td>
                    <td>@(cancion.Duracion / 60):@($"{cancion.Duracion % 60:D2}")</td>
                    <td>@(cancion.ContenidoExplicito ? "Sí" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
}
   





