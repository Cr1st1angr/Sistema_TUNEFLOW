@model Modelos.Tuneflow.User.Administration.ArtistStatistics

@{
    Layout = "~/Areas/Artista/Views/Shared/_LayoutArtista.cshtml";
    ViewData["Title"] = "Detalles Estadisticos";
}

<h1>Detalles Estadisticos</h1>

<div>
    <h4>ArtistStatistics</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            Artista
        </dt>
        <dd class = "col-sm-10">
			@Html.DisplayFor(model => model.Artist.StageName)
        </dd>
        <dt class = "col-sm-2">
            Total Reproducciones
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPlays)
        </dd>
        <dt class = "col-sm-2">
            Total Seguidores
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalFollowers)
        </dd>
        <dt class = "col-sm-2">
            Canciones Publicadas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishedSongs)
        </dd>
        <dt class = "col-sm-2">
            Albums Publicados)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishedAlbums)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
