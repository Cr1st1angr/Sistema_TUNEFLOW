@model Modelos.Tuneflow.Playlist.Playlist

@{
    Layout = "~/Areas/Cliente/Views/Shared/_LayoutCliente.cshtml";
    ViewData["Title"] = Model.Titulo;
}

<div class="playlist-header d-flex align-items-end p-4" style="background: linear-gradient(to bottom, #1db954, #121212); color: white;">
    <img src="@Model.PortadaPlaylist" alt="Portada playlist" class="me-4" style="width: 200px; height: 200px; object-fit: cover; border-radius: 10px;">
    <div>
        <p class="text-uppercase text-white-50 mb-1">Playlist</p>
        <h1 class="display-4 fw-bold mb-1">@Model.Titulo</h1>
        <p class="text-white-50">@Model.Descripcion</p>
        <button class="btn btn-success btn-lg mt-2">▶ Reproducir</button>
    </div>
</div>

<div class="container mt-4 text-white">
    <table class="table table-dark table-borderless align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Título</th>
                <th>Artista</th>
                <th>Contenido Explicito</th>
                <th>Duración</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Canciones != null && Model.Canciones.Any())
            {
                int index = 1;
                foreach (var cancion in Model.Canciones)
                {
                    <tr>
                        <td>@index</td>
                        <td class="d-flex align-items-center gap-3">
                            <img src="@cancion.RutaImagen" alt="@cancion.Titulo" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;">
                            <div>
                                <strong>@cancion.Titulo</strong><br />
                                <small class="text-muted">@cancion.Genero</small>
                            </div>
                        </td>
                        <td>@(cancion.Artista?.NombreArtistico ?? "Desconocido")</td>
                        <td>@(cancion.ContenidoExplicito ? "Explícito" : "No")</td>
                        <td>@cancion.TiempoEnMinutos(cancion.Duracion)</td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Esta playlist no tiene canciones.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
