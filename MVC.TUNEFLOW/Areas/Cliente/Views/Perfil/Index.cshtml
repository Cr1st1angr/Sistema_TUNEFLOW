@model Modelos.Tuneflow.User.Profiles.Profile

@{
    Layout = "~/Areas/Cliente/Views/Shared/_LayoutCliente.cshtml";
    ViewData["Title"] = "Perfil";
}

<div class="panel-container">
    <div style="background-color: var(--primary-dark); padding: 2rem; border-radius: var(--radius-lg);">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-4">
                <img src="@Model.ProfileImage" alt="Foto de perfil"
                     style="width: 120px; height: 120px; border-radius: 50%; border: 3px solid var(--text-white);" />
                <div>
                    <h4 class="mb-0 text-white">Perfil</h4>
                    <h2 class="mb-0 text-white fs-2 fw-bold">
                        @{
                            // Mostrar nombre del cliente o stage name del artista
                            string nombre = Model.Client != null
                            ? $"{Model.Client.FirstName} {Model.Client.LastName}"
                            : Model.Artist?.StageName ?? "Desconocido";
                        }
                        @nombre
                    </h2>
                </div>
            </div>

            @* Usamos tag helpers para respetar el área y generar la URL correctamente *@
            <a asp-area="Cliente"
               asp-controller="Perfil"
               asp-action="Edit"
               asp-route-id="@Model.Id"
               class="btn btn-primary">
                Editar
            </a>
        </div>
    </div>
</div>
