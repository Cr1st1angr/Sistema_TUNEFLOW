@model IEnumerable<string>

@{
    Layout = "~/Areas/Cliente/Views/Shared/_LayoutCliente.cshtml";
    ViewData["Title"] = "Descubre";
}

<div class="genre-panel">
    <h2 class="genre-title">🔍 Descubre por Género</h2>

    <div class="genre-card-grid">
        @foreach (var genero in Model)
        {
            var imgNombre = genero.Replace(" ", "-").ToLower(); // normalización
            <a href="/Cliente/Buscar/Buscar?nameSong=@genero" class="genre-card-link">
                <div class="genre-card-box">
                    <img src="@Url.Content($"~/img_descubre/{imgNombre}.png")" alt="Género: @genero" class="genre-card-img" />
                    <h5 class="genre-card-name">@genero</h5>
                </div>
            </a>
        }
    </div>
</div>

