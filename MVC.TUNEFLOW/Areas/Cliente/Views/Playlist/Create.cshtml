@model Modelos.Tuneflow.Playlists.Playlist

@{
    Layout = "~/Areas/Cliente/Views/Shared/_LayoutCliente.cshtml";
    ViewData["Title"] = "Crear Playlist";
}

<div class="panel-container">
    <h2>➕ Crear Playlist</h2>

    <form asp-area="Cliente" asp-controller="Playlist" asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="Title" class="form-label">Título</label>
            <input type="text" name="Title" class="form-control" required />
            <div class="invalid-feedback">Por favor ingresa un título.</div>
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Descripción</label>
            <textarea name="Description" class="form-control" rows="3" required></textarea>
            <div class="invalid-feedback">Por favor ingresa una descripción.</div>
        </div>

        <div class="mb-3">
            <label for="ImageCover" class="form-label">Portada (imagen)</label>
            <input type="file" name="ImageCover" class="form-control" accept="image/*" required />
            <div class="invalid-feedback">Por favor selecciona una imagen.</div>
        </div>

        <button type="submit" class="btn btn-primary">Crear Playlist</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}