    function reproducirCancion(id) {
        console.log("Reproducir canción ID:", id);
        // lógica de reproducción
    }

    function reproducirTodas() {
        console.log("Reproducir todas las canciones");
        // lógica para reproducir toda la playlist
    }
</script>
