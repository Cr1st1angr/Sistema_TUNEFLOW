@model List<Modelos.Tuneflow.Playlist.Playlist>

@{
    Layout = "~/Areas/Cliente/Views/Shared/_LayoutCliente.cshtml";
    ViewData["Title"] = "Playlist";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-white">Tus PlayLists</h2>
    <a href="@Url.Action("Create", "Playlist")" class="btn btn-link p-0" title="Agregar Playlist">
        <img src="~/img/add-playlist-icon.png" alt="Add Playlist" style="width: 60px;" />
    </a>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var playlist in Model)
    {
        <div class="col">
            <div class="card bg-dark text-white h-100 border-0">
                <a asp-area="Cliente" asp-controller="Playlist" asp-action="Details" asp-route-id="@playlist.Id">
                    <img src="@playlist.PortadaPlaylist" class="card-img-top" alt="@playlist.Titulo" style="height: 200px; object-fit: cover;" />
                </a>
                <div class="card-body text-center">
                    <h5 class="card-title">@playlist.Titulo</h5>
                </div>
            </div>
        </div>
    }
</div>
