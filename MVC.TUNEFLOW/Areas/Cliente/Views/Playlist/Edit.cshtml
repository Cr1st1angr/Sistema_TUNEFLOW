@model Modelos.Tuneflow.Playlists.Playlist
@{
    Layout = "~/Areas/Cliente/Views/Shared/_LayoutCliente.cshtml";
    ViewBag.Title = "Editar Playlist";
}

<style>
    .edit-container {
        background-color: #0d1321;
        color: #fff;
        padding: 2rem;
        border-radius: 1rem;
        max-width: 700px;
        margin: auto;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

        .edit-container h2 {
            font-size: 2rem;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

    .form-label {
        margin-top: 1rem;
        font-weight: 500;
    }

    .form-control {
        margin-top: 0.5rem;
        padding: 0.6rem 1rem;
        border-radius: 0.5rem;
        border: none;
    }

        .form-control:focus {
            outline: none;
            box-shadow: 0 0 0 2px #6c63ff;
        }

    .img-preview {
        margin-top: 1rem;
        margin-bottom: 1rem;
        max-width: 200px;
        border-radius: 0.5rem;
    }

    .btn-primary {
        background-color: #6c63ff;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: bold;
        margin-top: 1rem;
    }

        .btn-primary:hover {
            background-color: #5548e1;
        }
</style>

<div class="edit-container">
    <h2><i class="bi bi-pencil-fill"></i> Editar Playlist</h2>

    <form asp-area="Cliente" asp-action="Edit" asp-controller="Playlist" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div>
            <label for="Title" class="form-label">Título de la Playlist</label>
            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
        </div>

        <div>
            <label for="Description" class="form-label">Descripción</label>
            <textarea class="form-control" id="Description" name="Description" rows="4" required>@Model.Description</textarea>
        </div>

        <div>
            <label for="ImageCover" class="form-label">Portada de la Playlist</label>
            <input type="file" class="form-control" id="ImageCover" name="ImageCover" accept="image/*" required />

            @if (!string.IsNullOrEmpty(Model.PlaylistCover))
            {
                <img src="@Model.PlaylistCover" class="img-preview" alt="Portada actual" />
            }
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>
