@model Modelos.Tuneflow.Media.Song

<div class="modal-header">
    <h5 class="modal-title">@Model.Title</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <img src="@Model.ImagePath" style="width: 100%; max-height: 200px; object-fit: cover;" />
    <p><strong>Duración:</strong> @Model.TimeInMinutes(Model.Duration)</p>
    <audio controls autoplay style="width: 100%;">
        <source src="@Model.FilePath" type="audio/mpeg" />
        Tu navegador no soporta el elemento de audio.
    </audio>
</div>