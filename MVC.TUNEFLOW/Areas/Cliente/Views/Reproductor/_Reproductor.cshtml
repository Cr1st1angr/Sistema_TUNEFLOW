<div class="cliente-reproductor reducido" id="reproductor">
    <!-- Portada grande solo en expandido -->
    <div id="portadaGrandeContainer" class="portada-expandida">
        <img id="portadaGrande" src="~/img/placeholder.png" alt="Portada Grande" />
    </div>
    <div id="contenedorLetra" style="display: none; padding: 1rem;">
        <pre id="textoLetra" style="white-space: pre-wrap; font-family: 'Monument', sans-serif; color: white; text-shadow: 1px 1px 3px black; font-size: 1rem;"></pre>
    </div>

    <div class="d-flex align-items-center w-100 position-relative">
        <!-- Portada -->
        <div class="reproductor-portada me-3">
            <img id="portadaActual" src="~/img/placeholder.png" alt="Portada" style="height: 60px; width: 60px; object-fit: cover;" />
        </div>

        <!-- Información canción y barra -->
        <div class="reproductor-info flex-grow-1">
            <strong id="cancionActual">Ninguna canción en reproducción</strong>
            <div class="d-flex align-items-center mt-1">
                <span id="tiempoActual" style="min-width: 40px;">0:00</span>
                <input type="range" id="barraProgreso" min="0" max="100" value="0" class="form-range mx-2" style="flex-grow: 1;" />
                <span id="duracionTotal" style="min-width: 40px;">0:00</span>
            </div>
        </div>

        <!-- Controles -->
        <div class="reproductor-controles ms-3 d-flex align-items-center">
            <!-- Botón anterior -->
            <button class="btn-icon" onclick="anteriorCancion()" id="btn-atras">
                <img src="~/img/icons/atras.png" alt="Anterior" />
            </button>

            <!-- Botón play/pause -->
            <button class="btn-icon" onclick="togglePlay()" id="btn-play">
                <img id="icono-play-pause" src="~/img/icons/play.png" alt="Play/Pause" />
            </button>

            <!-- Botón siguiente -->
            <button class="btn-icon" onclick="siguienteCancion()" id="btn-siguiente">
                <img src="~/img/icons/siguiente.png" alt="Siguiente" />
            </button>

            <!-- Solo en expandido -->
            <button class="btn-icon btn-expandido" onclick="descargarCancion()">
                <img src="~/img/icons/descargar.png" alt="Descargar" />
            </button>

            <button class="btn-icon btn-expandido" onclick="verLetra()">
                <img src="~/img/icons/letra.png" alt="Letra" />
            </button>

            <button class="btn-icon btn-expandido" onclick="añadirACualquierPlaylist()">
                <img src="~/img/icons/add-playlist.png" alt="Añadir a Playlist" />
            </button>


            <!-- Me gusta siempre visible -->
            <button class="btn-icon" id="btnfavorito" onclick="añadirFavorito()">
                <img src="~/img/icons/me-gusta.png" alt="Favorito" />
            </button>

            <!-- Control de volumen solo en expandido -->
            <!-- Volumen fuera de btn-expandido -->
            <input type="range" class="form-range ms-2" id="volumenControl" min="0" max="1" step="0.01" value="0.5" style="width: 100px;" />

        </div>

        <!-- Botón expandir/minimizar -->
        <button class="btn-toggle-player" id="togglePlayerBtn" title="Maximizar/Minimizar reproductor">⬆</button>
    </div>

    <audio id="audioPlayer" src="" preload="auto"></audio>
</div>
