@model IEnumerable<Modelos.Tuneflow.User.Consumer.SubscriptionType>

@{
    ViewData["Title"] = "Planes";
    Layout = "~/Areas/Cliente/Views/Shared/_LayoutCliente.cshtml";
}


<div class="panel-container">
    <h1 class="text-center my-4">Elige tu plan</h1>

    <div class="d-flex flex-wrap justify-content-center gap-4">
        @foreach (var item in Model)
        {
            <div class="border rounded shadow-sm p-4 text-center bg-light" style="width: 280px;">
                <h3 class="text-primary">@item.Name</h3>
                <div class="h4 my-2">$@item.Price / mes</div>
                <div class="mb-3">👥 Hasta @item.MemberLimit usuarios</div>

                <div class="d-flex flex-column gap-2">
                    <a href="/Cliente/Pagos/Create" class="btn-adquirir me-2">Adquirir</a>
                    <a href="/Cliente/Planes/Details/@item.Id" class="btn btn-outline-primary">Detalles</a>

                </div>
            </div>
        }
    </div>
</div>