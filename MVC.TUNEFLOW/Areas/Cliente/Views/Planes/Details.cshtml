@model Modelos.Tuneflow.User.Consumer.SubscriptionType

@{
    ViewData["Title"] = "Detalles de Plan";
    Layout = "~/Areas/Cliente/Views/Shared/_LayoutCliente.cshtml";
}


<div class="panel-container">
    <h1>Details</h1>

    <div>
        <h4>SubscriptionType</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Tipo</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-2">Precio</dt>
            <dd class="col-sm-10">$ @Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-2">Cantidad de miembros</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.MemberLimit)</dd>
        </dl>
    </div>

    <div class="mt-4 d-flex gap-2">
        <a href="/Cliente/Planes/Planes" class="btn btn-secondary">Regresar</a>
        <a href="/Cliente/Pagos/Create" class="btn-adquirir me-2">Adquirir</a>

    </div>
</div>