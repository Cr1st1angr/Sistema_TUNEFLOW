@model List<Modelos.Tuneflow.User.Production.Follow>
@{
    ViewData["Title"] = "Siguiendo";
    Layout = "~/Areas/Cliente/Views/Shared/_LayoutCliente.cshtml";
}

<style>
    .titulo-seguimiento {
        font-size: 32px;
        font-weight: bold;
        color: white;
        margin-bottom: 30px;
    }

    .artistas-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
    }

    .card-artista {
        background-color: #181818;
        padding: 20px;
        border-radius: 15px;
        width: 180px;
        transition: background-color 0.3s ease;
        text-align: center;
    }

        .card-artista:hover {
            background-color: #282828;
        }

    .img-artista {
        width: 100%;
        aspect-ratio: 1/1;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 15px;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.5);
    }

    .nombre-artista {
        font-size: 18px;
        font-weight: bold;
        color: white;
        margin-bottom: 5px;
    }

    .rol-artista {
        font-size: 14px;
        color: #b3b3b3;
    }

    body {
        background-color: #121212;
        font-family: 'Segoe UI', sans-serif;
        padding: 40px;
    }
</style>

<div class="titulo-seguimiento">Siguiendo</div>

<div class="artistas-grid">
    @foreach (var follow in Model)
    {
        var artista = follow.Artist; 
        if (artista != null)
        {
            <div class="card-artista" onclick="location.href='/Artista/Perfil/Index?id=@artista.Id&idCliente=@ViewBag.IdCliente'" style="cursor: pointer;">
                <img src="@(!string.IsNullOrEmpty(artista.Profile.ProfileImage) ? artista.Profile.ProfileImage : "/images/default-artist.png")" alt="@artista.StageName" class="img-artista" />
                <div class="nombre-artista">@artista.StageName</div>
                <div class="rol-artista">Artista</div>
            </div>
        }
    }
</div>
