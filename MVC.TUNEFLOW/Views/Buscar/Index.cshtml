@model IEnumerable<Modelos.Tuneflow.Media.Cancion>

@{
    ViewData["Title"] = "Index";
}


<form method="get" asp-action="Buscar" asp-controller="Buscar">
    <input type="text" name="nameCancion" placeholder="Busca tu canción" style="padding:8px; width:250px;" />
    <button type="submit" style="padding:8px;">Buscar</button>
</form>


@if(Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                          
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Artista)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContenidoExplicito)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duracion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.RutaImagen" alt="Imagen de @item.Titulo" style="max-height: 100px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Artista.NombreArtistico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContenidoExplicito)
                    </td>
                    <td>
                        @item.TiempoEnMinutos(item.Duracion)
                    </td>
                    <td>
                        <button class="btn btn-sm btn-success" onclick="cargarDetalle(@item.Id)">Reproducir</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="modal fade" id="detalleModal" tabindex="-1" aria-labelledby="detalleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modalContent">
            <!-- Aquí se carga el contenido del modal desde el controlador -->
        </div>
    </div>
</div>

<script>
    function cargarDetalle(id) {
        fetch(`/Reproductor/Reproducir?id=${id}`)
            .then(res => res.text())
            .then(html => {
                document.getElementById('modalContent').innerHTML = html;
                const modal = new bootstrap.Modal(document.getElementById('detalleModal'));
                modal.show();
            })
            .catch(err => {
                console.error("Error al cargar detalle:", err);
                alert("No se pudo cargar el reproductor.");
            });
    }
</script>

